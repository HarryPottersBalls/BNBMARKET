{
  "name": "bnbmarket-backend",
  "version": "1.0.0",
  "description": "Backend API for BNBmarket prediction markets",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "build": "npm ci && node simple-migration.js && node fix-missing-columns.js && wasm-pack build wasm-lmsr --target web",
    "dev": "nodemon server.js",
    "db:init": "node init-database.js",
    "db:migrate": "node simple-migration.js && node fix-missing-columns.js",
    "test": "jest --config=jest.config.backend.js --coverage && jest --config=jest.config.frontend.js --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit",
    "test:coverage": "jest --coverage",
    "integration:check": "node scripts/integration-check.js",
    "lint": "eslint . --ext .js,.jsx --max-warnings=0",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "precommit": "npm run lint && npm test",
    "postinstall": "echo 'Dependencies installed successfully'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@binance-chain/bsc-connector": "^1.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "cloudinary": "^2.7.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "dotenv": "^17.2.3",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.11.3",
    "solc": "^0.8.30",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tweetnacl": "^1.0.3",
    "web3": "^4.16.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/eslint-parser": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/js": "^9.37.0",
    "@faker-js/faker": "^9.9.0",
    "babel-jest": "^30.2.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "bnb",
    "bsc",
    "binance-smart-chain",
    "prediction-markets",
    "blockchain",
    "defi"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|mjs|cjs|ts|tsx)$": "<rootDir>/node_modules/babel-jest"
    },
    "transformIgnorePatterns": [
      "[\\/\\/]node_modules[\\/\\\\\\\\].+\\.(js|jsx|mjs|cjs|ts|tsx)$",
      "^.+\\.module\\.(css|sass|scss)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web",
      "^.+\\.module\\.(css|sass|scss)$": "identity-obj-proxy"
    },
    "moduleFileExtensions": [
      "web.js",
      "js",
      "web.ts",
      "ts",
      "web.tsx",
      "tsx",
      "json",
      "web.jsx",
      "jsx",
      "node"
    ],
    "resetMocks": true
  },
  "author": "Your Name",
  "license": "MIT"
}
